<%- include('header') %>
    <%- include('navbar') %>
        <%- include('normalms') %>

            <!-- Main -->
            <main class="py-6 bg-surface-secondary">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 mx-auto">
                            <!-- Profile picture -->
                            <div class="card shadow border-0 mt-4 mb-10">
                                <div class="card-body text-center">
                                    <div class="align-items-center">
                                        <div>
                                            <div class="text-start fs-4" style="font-family: 'Parkinsans', sans-serif;">
                                                Profile
                                            </div>
                                            <div>
                                                <% if (user.img !=undefined) { %>
                                                    <a class="avatar avatar-lg rounded-circle text-white">
                                                        <img src="../images/users/<%= user.img %>" width="200px"
                                                            height="200px">
                                                    </a>
                                                    <% } %>
                                            </div>
                                            <div>
                                                <div class="mt-4">
                                                    <span class="h4 d-block mb-0"
                                                        style="font-family: 'Parkinsans', sans-serif;">
                                                        <%= user.name %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Form -->
                            <form class="mt-2 mb-2">
                                <div class="card shadow">
                                    <div class="card-body fs-5">
                                        <div class="text-end">
                                            <a class="btn btn-outline-primary btn-sm" href="/editProfile/<%= user.id %>"
                                                style="font-family: 'Parkinsans', sans-serif;">EDIT</a>
                                        </div>
                                        <div class="mt-3">
                                            <label class="form-label"
                                                style="font-family: 'Parkinsans', sans-serif;">Full Name :</label>
                                            <div class="text-primary ms-3"
                                                style="font-family: 'Parkinsans', sans-serif;">
                                                <%= user.name %>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="form-label mt-3"
                                                style="font-family: 'Parkinsans', sans-serif;">Username :</label>
                                            <div class="text-primary ms-3"
                                                style="font-family: 'Parkinsans', sans-serif;">
                                                <%= user.usr %>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="form-label mt-3"
                                                style="font-family: 'Parkinsans', sans-serif;">Phone :</label>
                                            <div class="text-primary ms-3"
                                                style="font-family: 'Parkinsans', sans-serif;">
                                                <%= user.phone %>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="form-label mt-3"
                                                style="font-family: 'Parkinsans', sans-serif;">Citizen ID :</label>
                                            <div class="text-primary ms-3"
                                                style="font-family: 'Parkinsans', sans-serif;">
                                                <%= user.citizencard %>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="form-label mt-3"
                                                style="font-family: 'Parkinsans', sans-serif;">Address :</label>
                                            <div class="text-primary ms-3"
                                                style="font-family: 'Parkinsans', sans-serif;">
                                                <%= user.address %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('footer') %>