<%- include('header') %>
  <%- include('navbar') %>
    <%- include('messages') %>

      <div class="container mt-2">
        <main>
          <section class="card bg-white shadow rounded">
            <div class="card-body">
              <h2 class="mt-2 text-success text-center special-elite-regular">- BOOKS -</h2>
              <div class="mt-5">
                <div class="row g-3">
                  <% books.forEach((book)=> { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                      <div class="card h-100">
                        <img src="./images/books/<%= book.img %>" class="card-img-top img-fluid"
                          alt="<%= book.book_name %>" />
                        <div class="card-body d-flex flex-column">
                          <h5 class="fs-6 text-center card-title fw-bold text-truncate">
                            <%= book.book_name %>
                          </h5>
                          <p class="text-center text-secondary mb-1" style="font-size: 14px;">
                            Author: <%= book.author %>
                          </p>
                          <p class="text-center text-primary mb-1" style="font-size: 14px;">
                            <%= book.price %> THB
                          </p>
                          <p class="text-center <%= book.status === 'Available' ? 'text-success' : (book.status === 'Reserved' ? 'text-warning' : 'text-danger') %>"
                            style="font-size: 14px;">
                            Status: <%= book.status %>
                          </p>
                          <div class="mt-auto text-center">
                            <form action="/add-to-cart" method="POST" class="d-inline">
                              <input type="hidden" name="bookId" value="<%= book.id %>">
                              <button type="submit" class="btn btn-success btn-sm mt-2">Add to Cart</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>
      <!-- Pagination -->
      <div class="container mt-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% if (currentPage> 1) { %>
              <li class="page-item">
                <a class="page-link" href="/home?page=<%= currentPage - 1 %>">Previous</a>
              </li>
              <% } %>
                <% for (let i=1; i <=totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/home?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link" href="/home?page=<%= currentPage + 1 %>">Next</a>
                      </li>
                      <% } %>
          </ul>
        </nav>
      </div>

      <%- include('footer') %>